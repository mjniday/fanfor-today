<%= form_for(@fixture, :url => matchweek_fixture_path(@matchweek)) do |f| %>
	<%= f.collection_select :home_team_id, Team.all, :id, :name %>

  	<%= f.label :home_team_score %>:
  	<%= f.number_field :home_team_score %><br />
	
	<%= f.label :away_team_score %>:
	<%= f.number_field :away_team_score %><br />

	<%= f.collection_select :away_team_id, Team.all, :id, :name %>

	<%= f.submit %>
<% end %>