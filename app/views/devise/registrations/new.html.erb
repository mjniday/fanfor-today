<div class="devise center ma1 pa2 br1 shadow-2 bg-green mw6">
  <div class="devise-inner-container">
    <h2>Sign up</h2>
    <div class="devise-form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.email_field :email, autofocus: true, placeholder: "hello@fanfor.today", class: "w-100 pa2" %>
        </div>

        <div class="field mt2">
          <%= f.password_field :password, autocomplete: "off", placeholder: "password (6 characters)", class: "w-100 pa2" %>
        </div>

        <div class="field mt2">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "password", class: "w-100 pa2" %>
        </div>

        <div class="actions mt2">
          <%= f.submit "Sign up", class: "w-100 bn f4 dim br2 ph3 pv2 mb2 dib white bg-black" %>
        </div>
      <% end %>
    </div>
    <p>Already have an account? <%= render "devise/shared/links" %></p>
  </div>
</div>