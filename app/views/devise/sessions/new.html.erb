<div class="devise center ma1 pa2 br1 shadow-2 bg-green mw6">
  <div class="devise-inner-container">
    <h2>Log in</h2>
    <div class="devise-form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, autofocus: true, placeholder: "hello@fanfor.today", class: "w-100 pa2" %>
        </div>

        <div class="field mt2">
          <%= f.password_field :password, autocomplete: "off", placeholder: "password", class: "w-100 pa2" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field mt2">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions mt2">
          <%= f.submit "Log in", class: "w-100 bn f4 dim br2 ph3 pv2 mb2 dib white bg-black" %>
        </div>
      <% end %>
    </div>
    <p><%= render "devise/shared/links" %></p>
  </div>
</div>